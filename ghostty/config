font-family = "JetBrainsMono Nerd Font Mono"
font-style = Medium
font-size = 12

theme = Catppuccin Mocha

cursor-style = block
cursor-text = #1E1E2E

link-url = true

window-padding-x = 6
window-padding-y = 6, 1
window-decoration = auto
background-opacity = 1
background-blur = 50

quit-after-last-window-closed = true
confirm-close-surface = false

clipboard-read = allow
clipboard-write = allow

shell-integration = detect
shell-integration-features =  sudo, title

# macos
macos-titlebar-style = hidden
macos-auto-secure-input = true
macos-secure-input-indication = true
macos-window-shadow = false

# keybindings
# needed for snacks picker
keybind = option+shift+h=esc:H
keybind = option+i=esc:i

# Fix for Neovim Ctrl+Meta navigation (Meta = Cmd on Mac)
keybind = ctrl+cmd+j=text:\x1b[1;7B
keybind = ctrl+cmd+k=text:\x1b[1;7A

# open folder with fzf
keybind = option+c=esc:c
