[user]
    name = Your Name
    email = your.email@example.com

[init]
    defaultBranch = main

[core]
    editor = nvim
    autocrlf = input
    ignorecase = false

[pull]
    rebase = false

[push]
    default = simple
    autoSetupRemote = true

[merge]
    tool = nvim
    conflictstyle = diff3

[diff]
    tool = nvim

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    ca = commit -a
    ps = push
    pl = pull
    df = diff
    dc = diff --cached
    lg = log --oneline --decorate --all --graph
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
    unstage = reset HEAD --
    last = log -1 HEAD
    visual = !gitk

[credential]
    helper = store