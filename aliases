# Get External IP / Internet Speed
alias myip="curl https://ipinfo.io/json" # or /ip for plain-text ip
alias speedtest="curl -s https://raw.githubusercontent.com/sivel/speedtest-cli/master/speedtest.py | python -"

# Quickly serve the current directory as HTTP
alias serve='ruby -run -e httpd . -p 8000' # Or python -m SimpleHTTPServer :)

# eza
alias ls=eza

## tree
alias tree="eza --tree"

# zoxide
alias cd=z

# skhd / yabai
alias skhdrc="code ~/dotfiles/skhd/skhdrc"
alias yabairc="code ~/dotfiles/yabai/yabairc"

# set env variables for docker/gcloud
function set_gcloud_env() {
  # Standardwerte fÃ¼r die Umgebungsvariablen
  local default_docker_image_name="name-of-my-image-in-kebab-case"
  local default_GCP_REGION="europe-west1"

  echo -n "GCP_REGION ($default_GCP_REGION): "
  read input_var1
  echo -n "GCP_PROJECT_ID: "
  read input_var2
  echo -n "DOCKER_IMAGE_NAME ($default_docker_image_name): "
  read input_var3
  echo -n "DOCKER_REPO_NAME: "
  read input_var4

  echo GCP_REGION="${input_var3:-$default_GCP_REGION}" > .env
  echo GCP_PROJECT_ID="$input_var1" >> .env
  echo DOCKER_IMAGE_NAME="${input_var2:-$default_docker_image_name}" >> .env
  echo DOCKER_REPO_NAME="$input_var4" >> .env
}

function get_gcloud_env() {
    echo "GCP_REGION=$GCP_REGION"
    echo "GCP_PROJECT_ID=$GCP_PROJECT_ID"
    echo "DOCKER_IMAGE_NAME=$DOCKER_IMAGE_NAME"
    echo "DOCKER_REPO_NAME=$DOCKER_REPO_NAME"
}
